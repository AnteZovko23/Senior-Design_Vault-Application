<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gradBlack"
    tools:context=".Lock">

    <Button
        android:id="@+id/backlock"
        android:layout_width="381dp"
        android:layout_height="88dp"
        android:text="Back Door"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/garagelock"
        app:layout_constraintVertical_bias="0.959" />

    <Button
        android:id="@+id/garagelock"
        android:layout_width="381dp"
        android:layout_height="88dp"
        android:text="Garage Door"
        app:layout_constraintBottom_toTopOf="@+id/backlock"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frontlock"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/frontlock"
        android:layout_width="381dp"
        android:layout_height="88dp"
        android:text="Front Door"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.67" />
</androidx.constraintlayout.widget.ConstraintLayout>